<Window x:Class="AsyncProgramming.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncProgramming"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Content="Click Me" Click="Button_Click" Width="100" Height="100" HorizontalAlignment="Left" Margin="30,30,10,0"/>
        <TextBlock x:Name="ResultantTextBlock" HorizontalAlignment="Center" Text="HomeLabel" Grid.Row="1" />
    </Grid>
</Window>
